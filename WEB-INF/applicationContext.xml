<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="xformsPersistenceManager" class="com.idega.block.form.business.FormsSlidePersistence" scope="singleton" />
	<bean id="process_xforms_variablesHandler" class="com.idega.jbpm.exe.impl.DefaultVariablesHandler" scope="singleton">
		<property name="converter" ref="process_xforms_converter" />
		<property name="processManager" ref="jbpmProcessManager" />
	</bean>
	<bean id="process_xforms_converter" class="com.idega.block.form.process.converters.XFormsConverter" scope="singleton">
		<property name="convertersFactory" ref="process_xforms_dataConvertersFactory" />
	</bean>
	<bean id="process_xforms_dataConvertersFactory" class="com.idega.block.form.process.converters.DataConvertersFactory" scope="singleton" />
	<bean id="process_xforms_viewFactory" class="com.idega.block.form.process.XFormsViewFactory" scope="singleton" />
	<bean id="process_xforms_viewToTask" class="com.idega.block.form.process.XFormsToTask" scope="singleton">
		<property name="jbpmConfiguration" ref="defaultJbpmConfiguration" />
		<property name="sessionFactory" ref="idega_jbpmDSHibernateSessionFactory" />
	</bean>
	<bean id="simpleCasesProcessProcessingBean" class="com.idega.block.form.process.cases.beans.SimpleCasesProcessProcessingBean" scope="singleton">
		<property name="jbpmConfiguration" ref="defaultJbpmConfiguration" />
		<property name="sessionFactory" ref="idega_jbpmDSHibernateSessionFactory" />
        <property name="documentManagerFactory" ref="xformsDocumentManagerFact" />
        <property name="viewToTaskBinder" ref="process_xforms_viewToTask" />
        <property name="variablesHandler" ref="process_xforms_variablesHandler" />
	</bean>
</beans>