<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd"
[
 <!ELEMENT idegaweb-info ANY>
 <!ELEMENT builder-visible (#PCDATA)>
 <!ELEMENT object-type (#PCDATA)>
 <!ELEMENT component-metadata ANY>
 <!ATTLIST component-metadata
     component-type CDATA #IMPLIED>
 <!ELEMENT facet-metadata ANY>
 <!ELEMENT attribute-metadata ANY>
 <!ELEMENT property-metadata ANY>
 <!ELEMENT accepts-child-components (#PCDATA)>
 <!ELEMENT attribute-values (#PCDATA)>
 <!ELEMENT base-component-type  (#PCDATA)>
 <!ELEMENT deprecated  (#PCDATA)>
 <!ELEMENT display-order  (#PCDATA)>
 <!ELEMENT expert  (#PCDATA)>
 <!ELEMENT favorite-property  (#PCDATA)>
 <!ELEMENT group  (#PCDATA)>
 <!ELEMENT help-topic  (#PCDATA)>
 <!ELEMENT hidden  (#PCDATA)>
 <!ELEMENT initial-value  (#PCDATA)>
 <!ELEMENT preferred  (#PCDATA)>
 <!ELEMENT preferred-child-tags  (#PCDATA)>
 <!ELEMENT property-editor  (#PCDATA)>
 <!ELEMENT short-description  (#PCDATA)>
 <!ELEMENT writable  (#PCDATA)> 
]
>
<faces-config>

  <component>
    <component-type>FormViewer</component-type>
    <component-class>com.idega.block.form.presentation.FormViewer</component-class>
    <property>
      <display-name>Form ID</display-name>
      <property-name>formId</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>FormListViewer</component-type>
    <component-class>com.idega.block.form.presentation.FormListViewer</component-class>
    <property>
      <display-name>Link to form viewer page</display-name>
      <property-name>detailsViewerPath</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>SavedForms</component-type>
    <component-class>com.idega.block.form.presentation.SavedForms</component-class>
    <property>
      <display-name>Show all saved forms</display-name>
      <property-name>showAll</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
    	<display-name>Show the newest forms on top</display-name>
    	<property-name>newestOnTop</property-name>
    	<property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show table header</display-name>
      <property-name>showTableHeader</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show only this author's forms</display-name>
      <property-name>userId</property-name>
      <property-class>java.lang.Integer</property-class>
      <property-extension>
      	<property-resolver>com.idega.user.handler.UserHandler</property-resolver>
      </property-extension>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>UserSavedForms</component-type>
    <component-class>com.idega.block.form.presentation.UserSavedForms</component-class>
    <property>
      <display-name>Show all saved forms</display-name>
      <property-name>showAll</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
    	<display-name>Show the newest forms on top</display-name>
    	<property-name>newestOnTop</property-name>
    	<property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show table header</display-name>
      <property-name>showTableHeader</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show only this author's forms</display-name>
      <property-name>userId</property-name>
      <property-class>java.lang.Integer</property-class>
      <property-extension>
      	<property-resolver>com.idega.user.handler.UserHandler</property-resolver>
      </property-extension>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>com.idega.UIFormsEntriesViewer</component-type>
    <component-class>com.idega.block.form.entries.presentation.UIFormsEntriesViewer</component-class>
  </component>
</faces-config>