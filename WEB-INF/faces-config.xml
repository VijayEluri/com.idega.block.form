<?xml version="1.0" encoding="UTF-8"?>

<faces-config
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
version="1.2">

  <component>
    <component-type>FormViewer</component-type>
    <component-class>com.idega.block.form.presentation.FormViewer</component-class>
    <property>
      <display-name>Form ID</display-name>
      <property-name>formId</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>FormListViewer</component-type>
    <component-class>com.idega.block.form.presentation.FormListViewer</component-class>
    <property>
      <display-name>Link to form viewer page</display-name>
      <property-name>detailsViewerPath</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>SavedForms</component-type>
    <component-class>com.idega.block.form.presentation.SavedForms</component-class>
    <property>
      <display-name>Show all saved forms</display-name>
      <property-name>showAll</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
    	<display-name>Show the newest forms on top</display-name>
    	<property-name>newestOnTop</property-name>
    	<property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show table header</display-name>
      <property-name>showTableHeader</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show only this author's forms</display-name>
      <property-name>userId</property-name>
      <property-class>java.lang.Integer</property-class>
      <property-extension>
      	<property-resolver>com.idega.user.handler.UserHandler</property-resolver>
      </property-extension>
    </property>
    <property>
      <display-name>Show only latest saved forms</display-name>
      <property-name>showLatestForms</property-name>
      <property-class>boolean</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>UserSavedForms</component-type>
    <component-class>com.idega.block.form.presentation.UserSavedForms</component-class>
    <property>
      <display-name>Show all saved forms</display-name>
      <property-name>showAll</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
    	<display-name>Show the newest forms on top</display-name>
    	<property-name>newestOnTop</property-name>
    	<property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show table header</display-name>
      <property-name>showTableHeader</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show only this author's forms</display-name>
      <property-name>userId</property-name>
      <property-class>java.lang.Integer</property-class>
      <property-extension>
      	<property-resolver>com.idega.user.handler.UserHandler</property-resolver>
      </property-extension>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
  <component>
    <component-type>com.idega.UIFormsEntriesViewer</component-type>
    <component-class>com.idega.block.form.entries.presentation.UIFormsEntriesViewer</component-class>
  </component>
</faces-config>